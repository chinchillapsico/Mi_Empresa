<div class="pt-5">
<p id="notice"><%= notice %></p>
<h1>Compañías</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Nombre Empresa</th>
      <th>Cantidad de empleados</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company, :class => ' text-white' %></td>
        <td><%= company.employees.size%></td>
        <td><%= link_to 'Editar', edit_company_path(company), :class => 'btn btn-primary text-white' %></td>
        <td><%= link_to 'Elminar', company, method: :delete,:class => 'btn btn-danger text-white', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<%= link_to 'New Company', new_company_path,  :class => 'btn btn-info text-white' %>
