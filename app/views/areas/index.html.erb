<p id="notice"><%= notice %></p>

<h1>Areas</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.name %></td>
        <td><%= link_to 'Show', area, :class => 'btn btn-success text-white' %></td>
        <td><%= link_to 'Edit', edit_area_path(area), :class => 'btn btn-primary text-white' %></td>
        <td><%= link_to 'Destroy', area, method: :delete, :class => 'btn btn-danger text-white', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Area', new_area_path, :class => 'btn btn-info text-white' %>
